% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% https://imas-db.jp/misc/color.html
% https://colorate.azurewebsites.net
\definecolor{noctchill}{RGB}{56, 77, 152}
\definecolor{toru}{RGB}{80, 208, 208}
\definecolor{madoka}{RGB}{190, 30, 62}
\definecolor{koito}{RGB}{121, 103, 195}
\definecolor{hinana}{RGB}{255, 198, 57}

% Extra colors
\definecolor{lightgray}{RGB}{240, 240, 240}
\definecolor{lightorange}{RGB}{255, 245, 242}
\definecolor{lightkoito}{RGB}{235, 233, 246}
\definecolor{lighthinana}{RGB}{255, 246, 226}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=noctchill}

% Headline
\setbeamercolor{headline}{fg=white,bg=toru}

% Block
\setbeamercolor{block title}{fg=noctchill,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=madoka,bg=lighthinana}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=lighthinana}

% Example Block
\setbeamercolor{block example title}{fg=noctchill,bg=lightkoito}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=lightkoito}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=noctchill}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
